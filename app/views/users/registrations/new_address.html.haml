.account
  .account__main
    .account__heder
      住所登録
    = form_for @address,url:addresses_path do |f|
      - @address.errors.full_messages.each do |message|
        .form-error
          = message
      .field
        .label
          = f.label :郵便番号
          .required
            必須
        .field__input
          = f.text_field :postal_code, placeholder: "例）123-4567", autocomplete: "postal_code"

      .field
        .label
          = f.label :都道府県
          .required
            必須
        .input-select
          = f.select :prefecture_id, Prefecture.all.map{|prefecture| [prefecture.name, prefecture.id]}

      .field
        .label
          = f.label :市町村
          .required
            必須
        .field__input
          = f.text_field :city, autocomplete: "city"

      .field
        .label
          = f.label :番地
          .required
            必須
        .field__input
          = f.text_field :street, autocomplete: "street"

      .field
        .label
          = f.label :マンション名やビル名
          .field__any
            任意
        .field__input
          = f.text_field :building_name, autocomplete: "building_name"

      .field
        .label
          = f.label :お届け先電話番号
          .field__any
            任意
        .field__input
          = f.text_field :telehone_number
  
      .field__actions
        = f.submit "登録", class: 'bt'
    = render "users/shared/links"