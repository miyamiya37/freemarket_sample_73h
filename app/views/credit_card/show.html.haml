.container
  -if !@error_messages.empty?
    .from-error
      = @error_messages
  .container__header
    = link_to image_tag("logo.png",size:"120x33")
  .credit
    %h2 クレジットカードの削除
    .credit__input
      %label カード番号
      %br
      = "**** **** **** " + @default_card_information.last4
      %br
      %label 有効期限
      %br
      - exp_month = @default_card_information.exp_month.to_s
      - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
      = exp_month + " / " + exp_year
      .security
      = form_tag(delete_credit_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
        %input{ type: "hidden", name: "card_id", value: "" }
        %button 削除する
.container__bottom
  .container__bottom__terms
    .terms__list
      = link_to 'プライバシーポリシー','#'
    .terms__list
      = link_to 'FURIMA利用規約','#'
    .terms__list
      = link_to '特定取引に関する表記','#'
  .container__bottom__icon
    .icon__img
      = image_tag('logo.png',size:"123x33")
      .icon__img__text
        %p
          ©︎ FURIMA,inc.