.container
  .input-form
    -if !@error_messages.empty?
      .from-error
        = @error_messages
  .container__header
    = link_to image_tag("logo.png",size:"120x33")
  .container__main
    .container__main__top
      購入内容の確認
    .container__main__item
      .item__image
        = image_tag @image.image_name.url, size:"80x80"
      .item__content
        .item__content__text
          = @product.name
        .item__content__price
          .item__money
            ¥
            = @product.price
          .item__tax
            = @postage[0].code_name
    .container__main__payment
      .payment__price
        .payment__price__box
          .price__text
            支払い金額
          .price__money
            ¥
            = @product.price
        .payment__price__point
          .point__box
            .point__box__text
              ■ ポイントを使用
            .point__box__value
              (所持ポイント:P0)
      .payment__card
        .payment__card__method
          .method__text
            支払い方法
          .method__change
            = link_to '変更する',"#"
        .payment__card__info
          .info__name
            クレジットカード
          .info__number
            = "**** **** ****" + @default_card_information.last4
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
      .payment__address
        .payment__address__method
          .address__text
            配送先           
          .address__change
            = link_to '変更する',"#"
        .payment__address__number
          = @address.postal_code
        .payment__address__text
          = @prefecture.name
          = @address.city
          = @address.street
          = @address.building_name
        .payment__address__name
          = current_user.nickname
    .container__main__bottom
      .bottom__buy
        = form_with(model: @order, local: true) do |f|
          = f.hidden_field :product_id, :value => @product.id
          %button.purchase2
            = f.submit "購入する" 
       
           
.container__bottom
  .container__bottom__terms
    .terms__list
      = link_to 'プライバシーポリシー','#'
    .terms__list
      = link_to 'FURIMA利用規約','#'
    .terms__list
      = link_to '特定取引に関する表記','#'
  .container__bottom__icon
    .icon__img
      = image_tag('logo.png',size:"123x33")
      .icon__img__text
        %p
          ©︎ FURIMA,inc.










